<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/backgound"
        >

        <TextView
            android:id="@+id/showEventNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chittagong tour"
            android:textSize="20dp"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/createdDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created Date: 22/5/2018"
            android:textSize="15dp"
            android:layout_marginLeft="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/departureDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure Date: 26/5/2018"
                android:textSize="15dp"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/dayLeftTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="18dp"
                android:text="4 days left"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>